<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/control_bg" >

    <RelativeLayout
        android:id="@+id/cameraactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/saveData"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="62dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/savedata_bac"
            android:visibility="visible" />

        <Button
            android:id="@+id/cameraButton"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/camera_bac"
            android:visibility="visible" />
        <!-- </RelativeLayout> -->

        <com.lenovo.lenovorobotmobile.view.ControlMoveView
            android:id="@+id/myControl_Bitmap"
            android:layout_width="161dp"
            android:layout_height="161dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" />


        <TextView
            android:id="@+id/forcetextView1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="178dp"
            android:gravity="center"
            android:text="@string/Calling"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mySmallView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/b2map_02"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/showRobotPicture"
            android:layout_width="125dp"
            android:layout_height="79dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/call_share"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/showOverBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/videoMeetingBt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="70dp"
                android:background="@drawable/sharelphonebackgroud" />

            <Button
                android:id="@+id/over"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignBaseline="@+id/videoMeetingBt"
                android:layout_alignBottom="@+id/videoMeetingBt"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="70dp"
                android:background="@drawable/endcallphonebackgroud" />
        </RelativeLayout>


        <com.lenovo.lenovorobotmobile.view.ControlHeadView
            android:id="@+id/upDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:layout_marginTop="112dp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/myControl_Bitmap"
            android:layout_marginTop="33dp" >

            <Button
                android:id="@+id/callstartVideo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="66dp"
                android:background="@drawable/startcall"
                android:visibility="gone" />

            <Button
                android:id="@+id/callendVideo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="66dp"
                android:background="@drawable/endcall"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/myBigImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>

    <com.lenovo.lenovorobotmobile.view.MLayout
        android:id="@+id/mMLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </com.lenovo.lenovorobotmobile.view.MLayout>

</RelativeLayout>